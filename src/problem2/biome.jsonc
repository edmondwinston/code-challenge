{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"lineWidth": 88,
		"indentWidth": 2,
		"indentStyle": "space"
	},
	"javascript": {
		"formatter": {
			"bracketSpacing": false
		}
	}
}
